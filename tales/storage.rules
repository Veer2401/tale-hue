rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - only user can upload their own
    match /profileImages/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Story images - only user can upload to their own folder
    match /stories/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
